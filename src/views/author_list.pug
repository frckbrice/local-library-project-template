extends layout

block content
  h1= title

  ul
    each author in author_list
      li
        a(href=author.url) #{author.name} &nbsp; &nbsp;
          if author.date_of_birth 
           span (#{author.date_of_birth_formated}
          if author.date_of_death 
            span &nbsp; &nsp; #{author.date_of_death_formated})
          else 
            span &#41;
        //- a(href=author.url) #{author.name}
        //- |  (#{author.date_of_birth_formated} - #{author.date_of_death_formated})
        
    else
      li There are no books.
