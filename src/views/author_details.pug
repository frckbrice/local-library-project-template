extends layout 

block content 

    h1 Author: #{author.name} 
    p #{author.date_of_birth_formated} - #{author.date_of_death_formated}

    div(style='margin-left:20px;margin-top:20px')

    h4 Books 


    dl 
      each book in author_books 
        dt 
          a(href=book.url) #{book.title} 
        dd #{book.summary} 

      else 
        p This author doesn't have books. 

